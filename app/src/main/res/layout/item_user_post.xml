<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingHorizontal="10dp">

    <!-- Post Title -->
    <TextView
        android:id="@+id/tvPostTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Post title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subreddit -->
    <TextView
        android:id="@+id/tvSubreddit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subreddit: r/android"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/tvPostTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="6dp" />

    <!-- Posted Time -->
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posted: 2h ago"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tvPostTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp" />

    <!-- Upvotes -->
    <TextView
        android:id="@+id/tvUpvotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upvotes: 120"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/tvSubreddit"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="6dp" />

    <!-- Comments -->
    <TextView
        android:id="@+id/tvComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comments: 14"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/tvSubreddit"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1F03DAC5"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvComments"/>

</androidx.constraintlayout.widget.ConstraintLayout>
